<Window x:Class="WindowsInteraction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsInteraction"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <StackPanel>
        <Button Width="100" Height="30" Content="New Window" Click="Button_Click" Margin="0,10,0,10"/>
        <Button Width="100" Height="30" Content="Blue Color" Click="BlueButton_Click" Margin="0,10,0,10"/>
        <Button Width="100" Height="30" Content="White Color" Click="WhiteButton_Click" Margin="0,10,0,10"/>
        <Button Width="150" Height="30" Content="All in Green Color" Click="GreenButton_Click" Margin="0,10,0,10"/>
    </StackPanel>
</Window>
