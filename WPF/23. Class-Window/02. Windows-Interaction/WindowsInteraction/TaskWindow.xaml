<Window x:Class="WindowsInteraction.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsInteraction"
        mc:Ignorable="d"
        Title="TaskWindow" Height="250" Width="250">
    <StackPanel>
        <Button Width="100" Height="30" Content="Close" Click="CloseButton_Click" Margin="0,10,0,10"/>
        <Button Width="100" Height="30" Content="Red Color" Click="RedButton_Click" Margin="0,10,0,10"/>
        <Button Width="100" Height="30" Content="White Color" Click="WhiteButton_Click" Margin="0,10,0,10"/>
    </StackPanel>
</Window>
