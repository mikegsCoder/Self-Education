<Window x:Class="Buttons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Buttons"
        mc:Ignorable="d"
        Title="Buttons" Height="400" Width="500">
    <StackPanel>
        <Button x:Name="acceptButton" Content="Оk" IsDefault="True" Click="acceptButton_Click" />
        <Button x:Name="escButton" Content="Exit" IsCancel="True" Click="escButton_Click" />
    </StackPanel>
</Window>
