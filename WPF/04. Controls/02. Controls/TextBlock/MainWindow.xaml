<Window x:Class="TextBlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextBlock"
        mc:Ignorable="d"
        Title="TextBlock" Height="300" Width="400">
    <StackPanel>

        <!--example 1-->
        <TextBlock>Text 1</TextBlock>
        <TextBlock Text="Text 2" />

        <!--example 2-->
        <TextBlock TextWrapping="Wrap" Margin="0,20,0,20">
            <Run FontSize="20" Foreground="Red" FontWeight="Bold">O</Run>
            <Run FontSize="16" Foreground="LightSeaGreen">some random text here...</Run>
        </TextBlock>

        <!--example 3-->
        <TextBlock>
            First random text
            <LineBreak />
            Second random text
        </TextBlock>
    </StackPanel>

</Window>
