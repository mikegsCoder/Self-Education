<Window x:Class="Label.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Label"
        mc:Ignorable="d"
        Title="Label" Height="200" Width="300">
    <StackPanel>

        <Label Target="{Binding ElementName=TextBox1}">Hello</Label>
        <TextBox Name="TextBox1" Margin="0 30 0 0" Height="30" Width="100"></TextBox>
    
    </StackPanel>
</Window>
