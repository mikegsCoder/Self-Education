<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="350" 
        Width="525">
    <Grid Height="330" Width="525">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103"/>
            <ColumnDefinition Width="414"/>
        </Grid.ColumnDefinitions>

        <!--Text Block-->
        <TextBlock
            Height="24"
            Margin="106,105,196,202"
            Foreground="Red"
            Text="Enter your name" 
            Grid.Column="1"/>

        <!--Input Field-->
        <TextBox 
            Name="textBoxName"
            Width="100"
            Height="24"
            Margin="109,154,205,153"
            AcceptsTab="True" 
            Grid.Column="1">
        </TextBox>

        <!--Button-->
        <Button 
            Width="100"
            Height="24"
            Content="Ok"
            Margin="109,205,205,102"
            Click="Button_Click"
            Grid.Column="1">
        </Button>
    </Grid>
</Window>
