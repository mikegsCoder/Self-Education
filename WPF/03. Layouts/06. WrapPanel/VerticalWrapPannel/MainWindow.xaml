<Window x:Class="VerticalWrapPannel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerticalWrapPannel"
        mc:Ignorable="d"
        Title="Vertical WrapPanel" Height="250" Width="300">
    <WrapPanel Orientation="Vertical">

        <Button Background="AliceBlue" Content="Button 1" Height="50" />
        <Button Background="Blue" Content="Button 2" />
        <Button Background="Aquamarine" Content="Button 3" Width="60"/>
        <Button Background="DarkGreen" Content="Button 4" Width="80"/>
        <Button Background="LightGreen" Content="Button 5"/>
        <Button Background="RosyBrown" Content="Button 6" Height="80" />
        <Button Background="GhostWhite" Content="Button 7" />
        <Button Background="Bisque" Content="Button 8" />

    </WrapPanel>
</Window>
