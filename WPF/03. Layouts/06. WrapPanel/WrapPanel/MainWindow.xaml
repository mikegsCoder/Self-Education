<Window x:Class="WrapPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WrapPanel"
        mc:Ignorable="d"
        Title="Horizontal WrapPanel" Height="250" Width="300">
    <WrapPanel>

        <Button Background="AliceBlue" Content="Button 1" />
        <Button Background="Blue" Content="Button 2" />
        <Button Background="Aquamarine" Content="Button 3" Height="30"/>
        <Button Background="DarkGreen" Content="Button 4" Height="20"/>
        <Button Background="LightGreen" Content="Button 5"/>
        <Button Background="RosyBrown" Content="Button 6" Width="80" />
        <Button Background="GhostWhite" Content="Button 7" />

    </WrapPanel>
</Window>
