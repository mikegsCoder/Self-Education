<Window x:Class="DockPanelExtended.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanelExtended"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="550">
    <DockPanel LastChildFill="True">

        <Button DockPanel.Dock="Top" Background="AliceBlue" Content="Top button 1" />
        <Button DockPanel.Dock="Top" Background="AliceBlue" Content="Top Button 2" />
        <Button DockPanel.Dock="Bottom" Background="BlanchedAlmond" Content="Bottom button" />
        <Button DockPanel.Dock="Left" Background="Aquamarine" Content="Left button 1" />
        <Button DockPanel.Dock="Left" Background="Aquamarine" Content="Left button 2" />
        <Button DockPanel.Dock="Right" Background="DarkGreen" Content="Right button" />
        <Button Background="LightGreen" Content="Central button" />
    
    </DockPanel>
</Window>
