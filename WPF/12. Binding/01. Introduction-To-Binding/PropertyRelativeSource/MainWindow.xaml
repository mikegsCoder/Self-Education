<Window x:Class="PropertyRelativeSource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PropertyRelativeSource"
        mc:Ignorable="d"
        Title="Property RelativeSource" Height="400" Width="500">
    <Grid Background="Black">
        <TextBlock Foreground="White"
            Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Grid}}, Path=Background}" />
    </Grid>
</Window>
