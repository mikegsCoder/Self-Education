<Window x:Class="BindingExampleTextBlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingExampleTextBlock"
        mc:Ignorable="d"
        Title="Binding Example" Height="400" Width="500">
    <StackPanel>
        <TextBox x:Name="myTextBox" Height="30" />

        <!--example 1-->
        <TextBlock x:Name="myTextBlock1" Text="{Binding ElementName = myTextBox, Path = Text}" Height="30" />
        
        <!--example 2-->
        <TextBlock x:Name="myTextBlock2" Height="30" />
    </StackPanel>
</Window>
