<Window x:Class="EventsInMarkup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Events in MarkUp" Height="350" Width="525">
    <StackPanel>

        <!--Event Handlers-->
        <Rectangle MinHeight="100" MinWidth="100" Fill="Green" Margin="10"
            MouseEnter="Rectangle_MouseEnter"
            MouseLeave="Rectangle_MouseLeave">
        </Rectangle>

        <Rectangle MinHeight="100" MinWidth="100" Fill="Green" Margin="10"
            MouseEnter="Rectangle_MouseEnter"
            MouseLeave="Rectangle_MouseLeave">
        </Rectangle>

    </StackPanel>
</Window>
