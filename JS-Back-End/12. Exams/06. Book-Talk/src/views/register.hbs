<section class="register-form-container">
    <form action="/auth/register" method="POST">
        <h3>Register</h3>
        <label>Email</label>
        <input type="email" name="email" class="box" id="" value="{{userData.email}}">
        <label>Username</label>
        <input type="text" name="username" class="box" id="" value="{{userData.username}}">
        <label>Password</label>
        <input type="password" name="password" class="box" id="">
        <label>Confirm Password</label>
        <input type="password" name="rePass" class="box" id="">
        <input type="submit" value="Register" class="btn" value="Submit">
        <p>Have an account ? <a href="/auth/login">Click here</a></p>
    </form>
</section>