<section class="edit-form-container">
    <form action="/item/edit/{{item._id}}" method="POST">
        <h3>Edit Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" value="{{item.title}}" id="">
        <label>Author</label>
        <input type="text" name="author" class="box" value="{{item.author}}" id="">
        <label>Genre</label>
        <input type="text" name="genre" class="box" value="{{item.genre}}" id="">
        <label>Stars</label>
        <input type="number" name="stars" class="box" value="{{item.stars}}" id="">
        <label>Image</label>
        <input type="text" name="imageUrl" class="box" value="{{item.imageUrl}}" id="">
        <label>Review</label>
        <textarea class="box" name="review">{{item.review}}</textarea>
        <input type="submit" value="Edit" class="btn">
    </form>
</section>