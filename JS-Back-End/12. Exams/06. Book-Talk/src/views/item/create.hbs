<section class="create-form-container">
    <form action="/item/create" method="POST">
        <h3>Create Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" id="" value="{{itemData.title}}">
        <label>Author</label>
        <input type="text" name="author" class="box" id="" value="{{itemData.author}}">
        <label>Genre</label>
        <input type="text" name="genre" class="box" id="" value="{{itemData.genre}}">
        <label>Stars</label>
        <input type="number" name="stars" class="box" id="" value="{{itemData.stars}}">
        <label>Image</label>
        <input type="text" name="imageUrl" class="box" id="" value="{{itemData.imageUrl}}">
        <label>Review</label>
        <textarea class="box" name="review">{{itemData.review}}</textarea>
        <input type="submit" value="Create" class="btn">
    </form>
</section>