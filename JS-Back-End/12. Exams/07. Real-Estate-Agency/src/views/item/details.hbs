<section id="deatils-page">
    <div class="wrapper">
        <div class="product-img">
            <img src="{{item.imageUrl}}">
        </div>
        <div class="product-info">
            <div class="product-text">
                <div class="product-text">
                    <h1>Name: {{item.title}}</h1>
                    <h2>Type: {{item.type}}</h2>
                    <h4>Year: {{item.year}}</h4>
                    <h4>City: {{item.city}}</h4>
                    <p>{{item.description}}</p>
                    {{#if item.hasTenants}}
                        <!-- if there are already tenants of the housing, separate their names with a comma and a space ", "  -->
                        {{!-- <p>People rented this housing: Alex Petkov, Ivan Dobrev</p> --}}
                        <p>People rented this housing: {{item.tenants}}</p>
                    {{else}}
                        <!-- If not display: -->
                        <p>People rented this housing: There are no tenants yet.</p>
                    {{/if}}
                </div>
            </div>
             {{#if item.hasUser}}
                <div class="product-btn">
                    {{#if item.isAuthor}}
                        <a href="/item/edit/{{item._id}}" class="edit">Edit</a>
                        <a href="/item/delete/{{item._id}}" class="remove">Delete</a>
                    {{else}}
                        {{#if item.isAvailable}}
                            {{#if item.isRented}}
                                <p class="alRentHome">You have already rent this home</p>
                            {{else}}
                                <a href="/item/rent/{{item._id}}" class="rentHome">Rent a home, available {{item.pieces}} housing</a>
                            {{/if}}
                        {{else}}
                            <p class="no-housing">No Housing Available!</p>
                        {{/if}}
                    {{/if}}
                </div>
            {{else}}
            {{/if}}
            {{!-- <!-- if there is no registered user, do not display buttons-->
            <div class="product-btn">
                <!-- Only for registered user and creator of the housing offer-->
                <a href="#" class="edit">Edit</a>
                <a href="#" class="remove">Delete</a>
                
                <!-- logged in user with available pieces-->
                <a href="#" class="rentHome">Rent a home, available 2 housing</a>
                <p class="alRentHome">You have already rent this home</p>
                <!-- logged in user with no available pieces-->
                <p class="no-housing">No Housing Available!</p>
            </div> --}}
        </div>
    </div>
</section>