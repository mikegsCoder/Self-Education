<section id="edit-container">
    <div class="edit-container-info">
        {{!-- <img src="/static/img/blog-img12.jpg" alt="image"> --}}
        <img src="{{item.imageUrl}}" alt="image">
        <form action="/item/edit/{{item._id}}" method="POST" class="container-text">
            <h2>Edit</h2>
            <p>Edit your masterpiece!</p>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="{{item.title}}">
            <label for="painting-tech">Painting technique:</label>
            <input type="text" id="painting-tech" name="technique" value="{{item.technique}}">
            <label for="picture">Art picture:</label>
            <input type="text" id="picture" name="imageUrl" value="{{item.imageUrl}}">
            <label for="certificate">Certificate of authenticity:</label>
            <input type="text" id="certificate" name="certificate" value="{{item.certificate}}">
            <button type="submit" class="edit-btn">Edit</button>
        </form>
    </div>
</section>