<section id="gallery">
    <h1>Gallery</h1>
    <article class="gallery-container">
        {{#if items}}
            {{#each items}}
                {{>item-catalog}}
            {{/each}}
        {{else}}
            <article class="no-available-publications">
                <h1>No publications created yet.</h1>
                <a href="/item/create" class="create-pub">Create publication</a>
            </article>
        {{/if}}
    </article>
</section>
