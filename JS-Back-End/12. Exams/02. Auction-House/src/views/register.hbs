<!-- Register Page -->
<section id="register-section" class="narrow">
    <h1 class="item">Register</h1>
    <div class="item padded align-center">
        <form class="aligned" method="POST" action="/auth/register">
            <label>
                <span>Email</span>
                <input type="text" name="email" value={{userData.email}}>
            </label>
            <label>
                <span>First name</span>
                <input type="text" name="firstName" value={{userData.firstName}}>
            </label>
            <label>
                <span>Last name</span>
                <input type="text" name="lastName" value={{userData.lastName}}>
            </label>
            <label>
                <span>Password</span>
                <input type="password" name="password">
            </label>
            <label>
                <span>Repeat Password</span>
                <input type="password" name="rePass">
            </label>

            <div class="align-center">
                <input class="action" type="submit" value="Create Account">
            </div>
        </form>
    </div>
</section>