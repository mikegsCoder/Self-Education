<!-- Details Page -->
<section id="catalog-section">
    <h1 class="item">
        {{item.title}}
    </h1>

    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{item.imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{item.category}}</strong></p>
                <p>{{item.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{item.price}}</strong>
                    </div>

                    {{#if item.hasUser}}
                        {{#if item.isAuthor}}
                            <a class="action btn-danger" href="/item/delete/{{item._id}}">Delete</a>
                            <a class="action btn-warning" href="/item/edit/{{item._id}}">Edit</a>
                        {{else}}
                            {{#if item.isBidder}}
                                <div>
                                    You are currently the <strong>highest bidder</strong> for this auction
                                </div>
                            {{else}}
                                <form class="vertical" method="POST" action="/item/bid/{{item._id}}">
                                    <label><span>Bid amount</span><input type="number" name="bid"></label>
                                    <input class="action" type="submit" value="Place bid">
                                </form>
                            {{/if}}
                        {{/if}}
                    {{/if}}

                    <!-- If current user can place a bid -->
                    {{!-- <form class="vertical" method="POST" action="/item/bid/{{_item.id}}">
                        <label><span>Bid amount</span><input type="number" name="bid"></label>
                        <input class="action" type="submit" value="Place bid">
                    </form> --}}

                    <!-- If current user is the bidder -->
                    {{!-- <div>
                        You are currently the <strong>highest bidder</strong> for this auction
                    </div> --}}

                </div>

            </div>
        </div>

        <footer>Listed by {{item.creator}}</footer>
    </div>

</section>