<section class="py-5 details" id="trip-details-page">
    <div class="container">
        <div class="destination">
            <div>
                <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
                <h5> from <span>{{item.startPoint}}</span> to <span>{{item.endPoint}}</span> </h5>
            </div>
            <div>
                <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                <h5> <span>{{item.date}}</span> at <span>{{item.time}}</span> </h5>
            </div>
        </div>
        <p class="line"></p>
        <div class="buddies-info">
            <i class="fas fa-users buddies"></i>
            <h5>Shared trip Buddies</h5>
            <div>
                {{#if item.isJoined}}
                    <p>{{item.joinedBy}}</p>
                {{else}}
                    <p>there are no buddies yet...</p>
                {{/if}}
            </div>
            <h5>Driver: <span>{{item.author.email}}</span> </h5>
        </div>
        <p class="line"></p>
        <h5 class="brand">Car Brand: <span class="lead">{{item.carBrand}}</span></h5>
        <div class="trip-info">
            <div>
                <img class="img-fluid rounded"
                    src="{{item.carImage}}"
                    alt="car-image">
            </div>
            <div class="trip-desc">
                <h5>Information about the trip</h5>
                <textarea class="lead"
                    disabled>{{item.description}}</textarea>
                <h5>Price: <span class="lead">{{item.price}}</span> BGN</h5>
                <div class="actions"></div>
                    {{#if item.hasUser}}
                        {{#if item.isAuthor}}
                            <a href="/item/delete/{{item._id}}" class="btn btn-danger">Delete this trip</a>
                            <a href="/item/edit/{{item._id}}" class="btn btn-warning">Edit this trip</a>
                        {{else}}
                            {{#if item.isBuddy}}
                                <span class="btn btn-info">Already joined. Don't be late!</span>
                            {{else}}
                                {{#if item.hasSeats}}
                                    <a href="/item/join/{{item._id}}" class="btn btn-join">Join now, [ {{item.seats}} ] seats left!</a>
                                {{else}}
                                    <span class="btn btn-secondary">No seats available! [0]</span>
                                {{/if}}
                            {{/if}}
                        {{/if}}
                    {{else}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>