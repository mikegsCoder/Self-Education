<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form action="/item/edit/{{item._id}}" method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="title" value="{{item.title}}">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value="{{item.imageUrl}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{item.price}}">
            <label>Description:</label>
            <textarea name="description" id="description">{{item.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentMethod">
                <option value="crypto-wallet">Crypto Wallet</option>
                <option value="credit-card">Credit Card</option>
                <option value="debit-card">Debit Card</option>
                <option value="paypal" selected>PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>
