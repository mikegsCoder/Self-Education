<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{item.imageUrl}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{item.title}}</h1>
            <h3 id="payment">Payment method: {{item.paymentMethod}}</h3>
            <p id="price"><span>Price: ${{item.price}}</span></p>
            <p id="description">{{item.description}}</p>
        </div>

        <div class="product-btn">
            {{#if item.hasUser}}
                {{#if item.isAuthor}}
                    <div class="author">
                        <a href="/item/edit/{{item._id}}" class="btn-edit">Edit</a>
                        <a href="/item/delete/{{item._id}}" class="btn-delete">Delete</a>
                    </div>
                {{else}}
                    {{#if item.isBuyer}}
                        <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                        <a href="/item/buy/{{item._id}}" class="btn-buy">Buy</a>
                    {{/if}}
                {{/if}}
            {{else}}
            {{/if}}

            <!--Only for registered user and author of the publication -->
