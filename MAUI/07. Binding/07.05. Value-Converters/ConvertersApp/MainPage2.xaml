<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ConvertersApp.Converters"
             x:Class="ConvertersApp.MainPage2">

    <!--Custom conversion example:-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:StringToColorConverter x:Key="colorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Padding="20">
        <Entry x:Name="entry" />
        <Label Text="Hello from MAUI!"
            TextColor="{Binding Source={x:Reference Name=entry}, 
                        Converter={StaticResource colorConverter},  
                        Path=Text}" />
    </StackLayout>

</ContentPage>
