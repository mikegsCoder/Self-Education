<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StopWatch.MainPage"
             Title="MAUI Stop Watch" >

    <Grid Background="BlanchedAlmond">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackLayout Grid.Column="0" >

            <Label FontSize="50" HorizontalOptions="Center">
                MAUI Timer
            </Label>

            <Label x:Name="clockTxtLbl" FontSize="70"
                HorizontalOptions="Center">
            </Label>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Button x:Name="startBtn" Margin="10"
                    Background="SkyBlue" Text="Start" FontSize="30" 
                    WidthRequest="120" HeightRequest="50"
                    BorderColor="Brown" BorderWidth="2"
                    Clicked="startbtn_Click">
                </Button>

                <Button x:Name="stopBtn" Margin="10"
                    Background="SkyBlue" Text="Stop" FontSize="30" 
                    WidthRequest="120" HeightRequest="50"
                    BorderColor="Brown" BorderWidth="2"
                    Clicked="stopbtn_Click">
                </Button>

                <Button x:Name="resetBtn" Margin="10"
                    Background="SkyBlue" Text="Reset" FontSize="30" 
                    WidthRequest="120" HeightRequest="50"
                    BorderColor="Brown" BorderWidth="2"
                    Clicked="resetbtn_Click">
                </Button>
            </HorizontalStackLayout>

        </StackLayout>

        <ListView Grid.Column="1" x:Name="elapsedTimesList" 
            Header="Elapsed times:"
            HorizontalOptions="Start" 
            VerticalOptions="Start" 
            WidthRequest="120" 
            Margin="20" />
        
    </Grid>

</ContentPage>
