<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorApp.MainPage"
             BackgroundColor="Black"
             Title="Calculator App" HeightRequest="1000" WidthRequest="380">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="CalculatorButtonStyle" TargetType="Button">
                <Setter Property="WidthRequest" Value="75" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="BackgroundColor" Value="#333333" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="BorderColor" Value="LightGray" />
                <Setter Property="BorderWidth" Value="2" />
                <Setter Property="Button.Shadow">
                    <Setter.Value>
                        <Shadow Brush="LightGrey" Opacity="0.7" Offset="3,3" Radius="5"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" HeightRequest="300">
            <!--Calculator Header-->
            <Border Margin="10" StrokeThickness="2" StrokeShape="RoundRectangle 10,10,10,10">
                <Label FontSize="24" 
                       HorizontalOptions="Center" 
                       Text=".NET MAUI Calculator" 
                       TextColor="LightBlue" 
                       FontAttributes="Bold" 
                       TextDecorations="Underline" 
                       Padding="10"/>
            </Border>

            <!--Calculator screen-->
            <Border Margin="10" StrokeThickness="2" StrokeShape="RoundRectangle 10,10,10,10" Padding="0">
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" HeightRequest="205" BackgroundColor="#343434" >
                    <Label x:Name="tempDisplayLabel" FontSize="24" HorizontalOptions="Center" TextColor="White" Padding="10"/>
                    <Label x:Name="displayTextLabel" FontSize="48" HorizontalOptions="Center" TextColor="White" Padding="10"/>
                </StackLayout>
            </Border>
        </StackLayout>

        <!--Buttons-->
        <Border Margin="10" StrokeThickness="2" StrokeShape="RoundRectangle 10,10,10,10" Padding="0">
            <Grid HorizontalOptions="Center" VerticalOptions="Center" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Number Buttons -->
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="7" Grid.Column="0" Grid.Row="3" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="8" Grid.Column="1" Grid.Row="3" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="9" Grid.Column="2" Grid.Row="3" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="4" Grid.Column="0" Grid.Row="4" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="5" Grid.Column="1" Grid.Row="4" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="6" Grid.Column="2" Grid.Row="4" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="1" Grid.Column="0" Grid.Row="5" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="2" Grid.Column="1" Grid.Row="5" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="3" Grid.Column="2" Grid.Row="5" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="0" Grid.Column="1" Grid.Row="6" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="." Grid.Column="2" Grid.Row="6" Clicked="Button_Click"/>
                <Button Style="{StaticResource CalculatorButtonStyle}" Text="=" Grid.Column="3" Grid.Row="6" BackgroundColor="Blue" Clicked="Button_Click"/>

            </Grid>
        </Border>
    </StackLayout>

</ContentPage>
